@model IEnumerable<ZeroHunger.Models.DistributionListModel>

@{
    ViewBag.Title = "DistributionList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DistributionList</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FoodType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            @{
                var dateTime = DateTime.Now;
                dateTime = (DateTime)item.Date;
            }
            <td>
                @dateTime.ToLongDateString()
            </td>

        </tr>
    }

</table>
